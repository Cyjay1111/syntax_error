variables strings, integers , float, booleans
# str(), int(), float(), bool()

#str characters with ""
name = "Cyjay"
last_name = "Despabiladeras"

print(name +" "+last_name)

#int whole numbers
age = 9
age_2 = 8

sum = age + age_2
print(sum)

#float numbers with decimals
height = 5.4
gpa = 1.0

print(f"My height is {height}ft")
print(f"My gpa is {gpa}flat")

#boolean true or false
is_handsome = True


if is_handsome: 
  print("i'm handsome")

else:
  print("I'm not")

is_cute = False

if is_cute:
  print("Thanks")

else:
  print("I'm cute also")

