#Basic Calcu ++
#+,-,*,/
#Addition

choice = input("Choose the operation 1|2|3|4:")

if choice == "1":
  print("Addition(+)")
  number = float(input("Enter a number: "))
  number_2 = float(input("Enter a number: "))
  print("=")
  print(number + number_2)

if choice == "2":
  print("Substraction (-)")
  number = float(input("Enter a number: "))
  number_2 = float(input("Enter a number: "))
  print("=") 
  print(number - number_2)

if choice == "3":
  print("Multiplication (*)")
  number = float(input("Enter a number: "))
  number_2 = float(input("Enter a number: "))
  print("=")
  print(number * number_2)

if choice == "4":
  print("Division (/)")
  number = float(input("Enter a number: "))
  number_2 = float(input("Enter a number: "))
  print("=")
  print(number / number_2)

